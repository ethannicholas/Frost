class String {
    @class
    method main() {
        def r :=  0 ... 13 by -1
        for i in r {
            Console.printLine(i)
        }

        def h := "Hello, World!"

        Console.printLine("+")
        Console.printLine(h + "!")
        Console.printLine(h + 5123)
        Console.printLine(h + true)
        Console.printLine(false + h)
        Console.printLine()

        Console.printLine("startsWith")
        Console.printLine(h.startsWith("Hello"))
        Console.printLine(h.startsWith("hello"))
        Console.printLine(h.startsWith(""))
        Console.printLine(h.startsWith("Hello, World!"))
        Console.printLine(h.startsWith("Hello, World! And Some More Stuff"))
        Console.printLine()

        Console.printLine("endsWith")
        Console.printLine(h.endsWith("!"))
        Console.printLine(h.endsWith(""))
        Console.printLine(h.endsWith("Hello, World!"))
        Console.printLine(h.endsWith("world!"))
        Console.printLine(h.endsWith("More Stuff Hello, World!"))
        Console.printLine()

        Console.printLine("[Range]")
        Console.printLine(h[..])
        Console.printLine(h[.. by 1])
        Console.printLine(h[...])
        Console.printLine(h[... by 1])
        Console.printLine(h[... by 2])
        Console.printLine(h[... by -1])
        Console.printLine(h[... by -2])
        Console.printLine(h[h.start() .. h.offset(h.start(), 5)])
        Console.printLine(h[h.start() ... h.offset(h.start(), 5)])
        Console.printLine(h[h.start() ... h.offset(h.start(), 5) by 2])
        Console.printLine(h[h.offset(h.start(), 7)..])
        Console.printLine(h[h.offset(h.start(), 7)...])
        Console.printLine(h[h.offset(h.start(), 7) .. h.offset(h.start(), 12)])
        Console.printLine(h[h.offset(h.start(), 7) ... h.offset(h.start(), 12)])
        Console.printLine(h[h.offset(h.start(), 11) ... h.offset(h.start(), 7) by -1])
        Console.printLine(h[h.offset(h.start(), 4) .. by -1])
        Console.printLine(h[h.offset(h.start(), 4) ... by -1])
        Console.printLine(h[h.start() ... by 100])
        Console.printLine()

        Console.printLine("indexOf")
        Console.printLine(h[h.indexOf("")])
        Console.printLine(h[h.indexOf("Hello")])
        Console.printLine(h[h.indexOf("!")])
        Console.printLine(h[h.previous(h.lastIndexOf(""))])
        Console.printLine(h[h.lastIndexOf("Hello")])
        Console.printLine(h[h.lastIndexOf("!")])
        Console.printLine(h[h.next(h.indexOf("l"))])
        Console.printLine(h[h.next(h.lastIndexOf("l"))])
        Console.printLine(h[h.previous(h.lastIndexOf("ll"))])
        Console.printLine(h.indexOf("Hello, World!!") = null)
        Console.printLine(h.indexOf("Q") = null)
        Console.printLine()

        Console.printLine("split1")
        def split1 := "This is a long string".split(" ")
        for i in 0 .. split1.count {
            Console.printLine(split1[i])
        }
        Console.printLine()

        Console.printLine("split2")
        def split2 := "This is a long string".split(" ", 3)
        for i in 0 .. split2.count {
            Console.printLine(split2[i])
        }
    }
}