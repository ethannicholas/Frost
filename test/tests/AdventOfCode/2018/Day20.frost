method dump(tiles:HashMap<(Int, Int), Char8>) {
    def all := tiles.keys.all()
    def minX := all.map(c => c[0]).fold(Int.min)
    def maxX := all.map(c => c[0]).fold(Int.max)
    def minY := all.map(c => c[1]).fold(Int.min)
    def maxY := all.map(c => c[1]).fold(Int.max)
    for y in minY - 1 ... maxY + 1 {
        for x in minX - 1 ... maxX + 1 {
            def c := tiles[(x, y)]
            if c !== null {
                Console.print(c)
            }
            else {
                Console.print("#")
            }
        }
        Console.printLine()
    }
}

def part2 := HashSet<(Int, Int)>()

method longest(tiles:HashMap<(Int, Int), Char8>, start:(Int, Int),
        visited:HashSet<(Int, Int)>):Int {
    function isDoor(x:Int, y:Int):Bit {
        def c := tiles[(x, y)]
        return c !== null & (c = "|" | c = "-")
    }
    visited.add(start)
    var result := visited.count - 1
    if result >= 1000 {
        part2.add(start)
    }
    if !visited.contains((start[0], start[1] - 2)) & isDoor(start[0], start[1] - 1) {
        result := result.max(longest(tiles, (start[0], start[1] - 2), visited))
    }
    if !visited.contains((start[0] - 2, start[1])) & isDoor(start[0] - 1, start[1]) {
        result := result.max(longest(tiles, (start[0] - 2, start[1]), visited))
    }
    if !visited.contains((start[0] + 2, start[1])) & isDoor(start[0] + 1, start[1]) {
        result := result.max(longest(tiles, (start[0] + 2, start[1]), visited))
    }
    if !visited.contains((start[0], start[1] + 2)) & isDoor(start[0], start[1] + 1) {
        result := result.max(longest(tiles, (start[0], start[1] + 2), visited))
    }
    visited.remove(start)
    return result
}

method main() {
    def regex := Console.inputStream().readFully()
    def tiles := HashMap<(Int, Int), Char8>()
    tiles[(0, 0)] := "X"
    var start := Stack<(Int, Int)>()
    start.push((0, 0))
    var current := (0, 0)
    for c in regex {
        match c {
            when "^", "$" {}
            when "N" {
                tiles[(current[0], current[1] - 1)] := "-"
                tiles[(current[0], current[1] - 2)] := "."
                current := (current[0], current[1] - 2)
            }
            when "W" {
                tiles[(current[0] - 1, current[1])] := "|"
                tiles[(current[0] - 2, current[1])] := "."
                current := (current[0] - 2, current[1])
            }
            when "E" {
                tiles[(current[0] + 1, current[1])] := "|"
                tiles[(current[0] + 2, current[1])] := "."
                current := (current[0] + 2, current[1])
            }
            when "S" {
                tiles[(current[0], current[1] + 1)] := "-"
                tiles[(current[0], current[1] + 2)] := "."
                current := (current[0], current[1] + 2)
            }
            when "(" {
                start.push(current)
            }
            when ")" {
                start.pop()
            }
            when "|" {
                current := start[0]
            }
        }
    }
    Console.printLine(longest(tiles, (0, 0), HashSet<(Int, Int)>()))
    Console.printLine(part2.count)
}