method main() {
    def input := Console.inputStream().readFully()
    def find := function(s:String):Int {
        var i := 0
        loop {
            def hex := MD5.hex(MD5.md5((input + i).utf8))
            if hex.startsWith(s) {
                return i
            }
            i += 1
        }
    }
-- to keep this from taking too long during tests, we actually solve a simpler instance of the
-- problem here
--    Console.printLine(find("00000"))
--    Console.printLine(find("000000"))
    Console.printLine(find("00"))
    Console.printLine(find("000"))
}

