    method update(message:ListView<UInt8>) {
        for b in message {
            buffer[count] := b
            count += 1
            if count = 64 {
                processChunk()
                bitLength += 512
                count := 0
            }
        }
    }

    method finish():Array<UInt8> {
        if count < 56 {
            buffer[count] := 0x80
            for i in count + 1 .. 56 {
                buffer[i] := 0
            }
        }
        else {
            buffer[count] := 0x80
            for i in count + 1 .. 64 {
                buffer[i] := 0
            }
            processChunk()
            for i in 0 .. 64 {
                buffer[i] := 0
            }
        }
        bitLength += count * 8
        buffer[56] := bitLength.asUInt8
        buffer[57] := (bitLength >> 8).asUInt8
        buffer[58] := (bitLength >> 16).asUInt8
        buffer[59] := (bitLength >> 24).asUInt8
        buffer[60] := (bitLength >> 32).asUInt8
        buffer[61] := (bitLength >> 40).asUInt8
        buffer[62] := (bitLength >> 48).asUInt8
        buffer[63] := (bitLength >> 56).asUInt8
        processChunk()

        def result := Array<UInt8>(32)
        method output(i:Int32) {
            result.add(i.asUInt8)
            result.add((i >> 8).asUInt8)
            result.add((i >> 16).asUInt8)
            result.add((i >> 24).asUInt8)
        }
        output(a0)
        output(b0)
        output(c0)
        output(d0)
        return result
    }

    @class
    function md5(message:ListView<Char8>):Array<UInt8> {
        def result := MD5()
        result.update(message.map(c => c.asUInt8))
        return result.finish()
    }

    @class
    function md5(message:ListView<UInt8>):Array<UInt8> {
        def result := MD5()
        result.update(message)
        return result.finish()
    }

    constant DIGITS := "0123456789ABCDEF"
    @class
    function hex(bytes:Array<UInt8>):String {
        def result := Array<Char8>(16)
        for b in bytes {
            def i1 := (b // 16)
            result.add(DIGITS[i1].asChar8)
            def i2 := (b % 16)
            result.add(DIGITS[i2].asChar8)
        }
        return String(result)
    }
