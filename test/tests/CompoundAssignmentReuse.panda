class CompoundAssignmentReuse {
    @class
    method noisyZero():Int {
        Console.println("calculating index")
        return 0
    }

    @class
    method main() {
        def x := Pointer<Int>.alloc(1)
        x[0] := 16
        x[noisyZero()] += 5
        Console.println(x[0])
        x[noisyZero()] *= 2
        Console.println(x[0])
    }
}