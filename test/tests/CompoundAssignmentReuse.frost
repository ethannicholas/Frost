uses frost.unsafe.NewPointer

method noisyZero():Int {
    Console.printLine("calculating index")
    return 0
}

method main() {
    def x := NewPointer<Int>.alloc(1)
    x[0] := 16
    x[noisyZero()] += 5
    Console.printLine(x[0])
    x[noisyZero()] *= 2
    Console.printLine(x[0])
    x.destroy()
}
