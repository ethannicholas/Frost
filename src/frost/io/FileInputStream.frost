package frost.io

uses frost.unsafe.NewPointer

@package
@final
class FileInputStream : InputStream {
    @private
    def handle:Int64

    @private
    def closeOnCleanup:Bit

    @private
    init() {
        -- can only be constructed by native code
    }

    @override
    method cleanup() {
        if closeOnCleanup {
            def error := close() -- ignore
        }
    }

    @override
    @external
    method close():Error?

    @override
    method read():UInt8? {
        return readImpl()
    }

    @private
    @external
    method readImpl():UInt8?

    @override
    method read(buffer:NewPointer<UInt8>, max:Int):Int {
        return readImpl(buffer, max)
    }

    @private
    @external
    method readImpl(buffer:NewPointer<UInt8>, max:Int):Int
}