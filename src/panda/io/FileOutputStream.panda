package panda.io

uses panda.unsafe.Pointer

@package
class FileOutputStream : OutputStream {
    @private
    def handle:Int64

    @private
    init() {
        -- can only be constructed by native code
    }

    @override
    @external
    method cleanup()

    @override
    @external
    method write(value:Int8)

    @override
    @external
    method write(ptr:Pointer<Int8>, offset:Int, size:Int)
}