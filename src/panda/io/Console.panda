package panda.io

@final
class Console {
    @class
    @external
    method print(c:Char8)

    @class
    method print(s:String) {
        var i := 0
        while i < s.size {
            Console.print(s.data[i])
            i := i + 1
        }
    }

    @class
    method printLine(s:String) {
        print(s)
        print(Char8(10))
    }

    @class
    @external
    method printLine(i:Int64)

    @class
    method printLine(b:Bit) {
        if b {
            printLine(1)
        }
        else {
            printLine(0)
        }
    }
}