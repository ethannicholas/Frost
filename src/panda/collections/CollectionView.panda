package panda.collections

interface CollectionView<T> : Iterable<T> {
    -- property count:Int

    function get_count():Int

    @pre(get_count() > 0)
    function fold(f:(T, T)=>(T)):T { -- FIXME (T, U)=>(U) when generics are in
        def i := iterator()
        var result := i.next()
        while !i.get_done() {
            result := f(result, i.next())
        }
        return result
    }

    function fold(f:(T, T)=>(T), start:T):T { -- FIXME (T, U)=>(U) when generics are in
        var result := start
        for v in self {
            result := f(result, v)
        }
        return result
    }

    method apply(m:(T)=&>()) {
        for v in self {
            m(v)
        }
    }
}
