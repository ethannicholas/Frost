package org.pandalanguage.pandac.pandadoc

uses org.pandalanguage.pandac.pandadoc.Markdown -- FIXME this shouldn't be necessary

constant HEADER :=
    "<html>" +
    "  <head>\n" +
    "    <link rel=\"stylesheet\" type=\"text/css\" href=\"panda-master.css\" />\n" +
    "    <link rel=\"stylesheet\" type=\"text/css\" href=\"pandacode-monokai.css\" />\n" +
    "  </head>\n" +
    "  <body>\n"

constant FOOTER :=
    "  </body>" +
    "</html>"

method main(args:ListView<String>) {
    def input := File(args[1])
    def output := File(args[2])
    output.write(HEADER +
            Markdown(input, null).process(input.readFully()) +
            FOOTER)
}
