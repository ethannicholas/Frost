package org.pandalanguage.pandac

@final
class Position : Value {
    def line:Int

    def column:Int

    init() {
        self.line := 1
        self.column := 1
    }

    init(line:Int, column:Int) {
        self.line := line
        self.column := column
    }

    @override
    function convert():String {
        return "\{line}:\{column}"
    }
}