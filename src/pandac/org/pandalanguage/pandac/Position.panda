package org.pandalanguage.pandac

class Position : Immutable {
    def file:String

    def line:Int

    def column:Int

    init(file:String, line:Int, column:Int) {
        self.file := file
        self.line := line
        self.column := column
    }

    @override
    function convert():String {
        return "\{file}:\{line}:\{column}"
    }
}